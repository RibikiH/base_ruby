<div class="card border-primary">
  <h3 class="card-header bg-primary text-white">パスワード再設定</h3>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <fieldset class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: 'form-control', autofocus: true %>
        <em class="text-warning">(<%= @minimum_password_length %> 文字以上で入力してください)</em>
      </fieldset>

      <fieldset class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </fieldset>

      <%= f.submit "パスワードを変更する", {class: 'btn btn-primary btn-lg'} %>
        
    <% end %>
  </div>
</div>

<%= render "admins/shared/links" %>
